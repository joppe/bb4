{% extends '::base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/aapbluebirds/css/bootstrap.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script data-main="{{ asset('bundles/aapbluebirds/js/admin') }}" src="{{ asset('bundles/aapbluebirds/js/3rd-party/require.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">BB4</a>
            </div>
        </div>
    </div>
    <div class="container" id="content"></div>
    {% block templates %}
    {% endblock %}
    <script type="text/tmpl-javascript" id="tmpl-confirm">
        <div class="modal">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true">&times;</button>
                <h3>Are you sure?</h3>
            </div>
            <div class="modal-body">
                <p class="text-warning">You are about to delete an <%= entityName %></p>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn confirm">Yes</a>
                <a href="#" class="btn btn-primary cancel">No</a>
            </div>
        </div>
    </script>
{% endblock %}