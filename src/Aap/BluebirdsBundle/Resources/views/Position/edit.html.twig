{% extends 'AapBluebirdsBundle::admin.html.twig' %}

{% import 'AapBluebirdsBundle::macros/buttons.html.twig' as buttons %}

{% block title %}Positions{% endblock %}

{% block section %}
    <form action="{{ path('position_edit', {'id': position.id}) }}" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend>Edit position <em>{{ position.name }}</em></legend>
            {{ form_widget(form) }}
        </fieldset>
        <fieldset class="buttons">
            {{ buttons.save('Save') }}
            {{ buttons.cancel(path('position_list'), 'Cancel') }}
        </fieldset>
    </form>
{% endblock %}