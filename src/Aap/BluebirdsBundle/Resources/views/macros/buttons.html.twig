{% macro add(url, label) %}
    {{ _self._anchor(url, label, 'add', 'sprite-plus-sign') }}
{% endmacro %}

{% macro edit(url, label) %}
    {{ _self._anchor(url, label, 'edit', 'sprite-pencil') }}
{% endmacro %}

{% macro delete(url, label) %}
    {{ _self._anchor(url, label, 'delete', 'sprite-minus') }}
{% endmacro %}

{% macro cancel(url, label) %}
    {{ _self._anchor(url, label, 'cancel', 'sprite-remove-sign') }}
{% endmacro %}

{% macro save(label) %}
    {{ _self._button(label, 'save', 'sprite-ok-sign') }}
{% endmacro %}

{% macro _anchor(url, label, class_name, sprite) %}
    <a href="{{ url }}" class="button {{ class_name}}">
        <span class="sprite {{ sprite }}"></span>
        {% if label %}
            <span class="label">{{ label }}</span>
        {% endif %}
    </a>
{% endmacro %}

{% macro _button(label, class_name, sprite) %}
    <button type="submit" class="{{ class_name }}">
        <span class="sprite {{ sprite }}"></span>
        {% if label %}
            <span class="label">{{ label }}</span>
        {% endif %}
    </button>
{% endmacro %}